<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ProfileFragment">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:theme="@style/AppTheme.NoActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            >
<TextView
    android:textColor="@color/black"
    android:text="Press below to set the Image"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/image_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="600dp"
                android:layout_height="330dp"
                android:layout_marginTop="-200dp"
                android:background="@drawable/ic_circle_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:clipToOutline="true"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:id="@+id/image_view"
        android:background="@drawable/round_outline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <EditText
        android:gravity="center_horizontal"
        android:id="@+id/et_name"
        android:textSize="20sp"
        android:background="@drawable/rounded_edttext"
        android:textColor="@color/black"
        android:hint="Name"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <ImageView
        android:layout_marginEnd="70dp"
        app:layout_constraintTop_toTopOf="@+id/ort"
        android:id="@+id/image_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:src="@drawable/ic_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="15sp"
        android:layout_marginStart="70dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ort"
        android:text="ZÃ¼rich,Switzerland"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/description"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_location"
        android:text="I'm web designer. Love travelling,mountains,
        \n cats, vintage,yoga.Nice to see you here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="50dp"
        android:textColor="@color/black"
        android:id="@+id/shots"
        android:textSize="30sp"
        android:text="19"
        app:layout_constraintTop_toTopOf="@+id/place"
        app:layout_constraintStart_toStartOf="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
            <TextView
        android:text="Shots"
        app:layout_constraintEnd_toEndOf="@+id/shots"
        app:layout_constraintStart_toStartOf="@+id/shots"
        app:layout_constraintTop_toBottomOf="@+id/shots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/place"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
            <TextView
        android:textColor="@color/black"
        android:id="@+id/followers"
        android:textSize="30sp"
        android:text="337"
        app:layout_constraintTop_toTopOf="@+id/place"
        app:layout_constraintStart_toStartOf="@+id/place"
        app:layout_constraintEnd_toEndOf="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
            <TextView
        android:text="Followers"
        app:layout_constraintEnd_toEndOf="@+id/followers"
        app:layout_constraintStart_toStartOf="@+id/followers"
        app:layout_constraintTop_toBottomOf="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/following"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:text="819"
        app:layout_constraintTop_toTopOf="@+id/place"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Following"
        app:layout_constraintEnd_toEndOf="@+id/following"
        app:layout_constraintStart_toStartOf="@+id/following"
        app:layout_constraintTop_toBottomOf="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toTopOf="@+id/place"
        app:layout_constraintEnd_toStartOf="@+id/followers"
        android:background="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/shots"
        android:layout_width="2dp"
        android:layout_height="70dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="@+id/place"
        app:layout_constraintEnd_toStartOf="@+id/following"
        android:background="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/followers"
        android:layout_width="2dp"
        android:layout_height="70dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        app:layout_constraintBottom_toTopOf="@+id/view_pager"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Shorts"
        app:layout_constraintTop_toBottomOf="@id/linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.tabs.TabLayout
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <androidx.viewpager2.widget.ViewPager2
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>